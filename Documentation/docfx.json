{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "/**/*.cs"
          ]
        }
      ],
      "globalNamespaceId": "Global",
      "filter": "filterConfig.yml",
      "dest": "api"
    }
  ],
  "build": {
    "globalMetadata": {
      "_appName": "SF Tool Documentation",
      "_appTitle": "SF Tool Documentation",
      "_enableSearch": true,
      "pdf": true
    },
    "content": [
      {
        "files": [
          "toc.yml",
          "index.md"
        ]
      },
      {
        "src": "api",
        "files": [
          "*.yml"
        ],
        "dest": "api"
      },
      {
        "src": "manual",
        "files": [
          "toc.yml",
          "*.md"
        ],
        "dest": "manual"
      },
      {
        "src": "install-instructions",
        "files": [
          "toc.yml",
          "*.md"
        ],
        "dest": "install-instructions"
      }
    ],
    "resource": [
      {
        "files": [
          "resources/**/*"
        ]
      }
    ],
    "template": [ "default", "templates/unity" ],
    "sitemap": {
      "baseUrl": "https://shatter-fantasy.github.io/SF-Metroidvania",
      "changefreq": "weekly",
      "fileOptions": {
        "api/*": {
          "changefreq": "weekly"
        }
      }
    },
    "xref": [ "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml" ],
    "xrefService": [
      "https://learn.microsoft.com/api/xref/query?uid={uid}"
    ],
    "dest": "../_site",
    "output": "../_site"
  }
}